
<!--pages/address/address.wxml-->
<text>pages/address/address.wxml</text>
<view class="zan-panel">
  <view class="zan-cell">
    <view class="zan-cell__bd item">
      <view class="zan-font-16 zan-font-bold">收货人：{{name}}</view>
      <view class="zan-font-16 zan-font-bold">电话：{{mobile}}</view>
      <view class="zan-font-16 zan-font-bold">收货地址：{{address}}</view>
    </view>
  </view>
</view>
<form class="zan-form" style="margin-top:20rpx;" bindsubmit="changeAddress">
  <view class="zan-cell zan-form__item">
    <text class="zan-form__title">收货人</text>
    <input class="zan-form__input zan-cell__bd" name="name" placeholder="名字" />
  </view>
  <view class="zan-cell zan-form__item">
    <text class="zan-form__title">联系电话</text>
    <input class="zan-form__input zan-cell__bd" type="number" name="mobile" maxlength="20" placeholder="手机或固定电话" />
  </view>
  <view class="zan-cell zan-form__item zan-cell--last-child">
    <text class="zan-form__title">收货地址</text>
    <view class="zan-form__input zan-cell__bd">
      <input name="address" placeholder="详细地址信息" type="text" />
    </view>
  </view>
  <button class="zan-btn zan-btn--large zan-btn--primary" form-type="submit">修改收货地址</button>
</form>